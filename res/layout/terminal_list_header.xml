<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="24dp"
	android:gravity="center_horizontal">

	<TextView
		android:id="@+id/terminal_add_others"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_marginRight="15dp"
		android:textSize="19sp"
		android:textColor="@color/blank_button_selector"
		android:text="@string/terminal_add_others"
		android:drawableLeft="@drawable/terminal_add"
		android:drawablePadding="5dp"
		android:clickable="true"/>

	<TextView
		style="@style/TextTrace"
		android:textSize="12sp"
		android:layout_marginTop="5dp"
		android:text="@string/terminal_add_tips"/>
</LinearLayout>