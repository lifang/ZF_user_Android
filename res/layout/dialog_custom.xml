<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_shape"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/custom_dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:gravity="center"
        android:text="sdfadf" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/Viewc2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/custom_dialog_left"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="16sp"
            android:text="确定"
            android:textColor="@color/bgtitle" >
        </Button>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/Viewc2" />

        <Button
            android:id="@+id/custom_dialog_right"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="16sp"
            android:text="取消"
            android:textColor="@color/bgtitle" >
        </Button>
    </LinearLayout>

</LinearLayout>